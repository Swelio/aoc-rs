{
    "id": "gpg",
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils:2"
    ],
    "mounts": [
        {
            "source": "${localEnv:HOME}/.gnupg/trustdb.gpg",
            "target": "/home/${localEnv:DEV_USERNAME}/.gnupg/trustdb.gpg,readonly",
            "type": "bind"
        },
        {
            "source": "${localEnv:HOME}/.gnupg/pubring.kbx",
            "target": "/home/${localEnv:DEV_USERNAME}/.gnupg/pubring.kbx,readonly",
            "type": "bind"
        },
        {
            "source": "${localEnv:XDG_RUNTIME_DIR}/gnupg/S.gpg-agent",
            "target": "/home/${localEnv:DEV_USERNAME}/.gnupg/S.gpg-agent,readonly",
            "type": "bind"
        },
        {
            "source": "${localEnv:XDG_RUNTIME_DIR}/gnupg/S.gpg-agent.extra",
            "target": "/home/${localEnv:DEV_USERNAME}/.gnupg/S.gpg-agent.extra,readonly",
            "type": "bind"
        }
    ],
    "name": "GPG forwarding",
    "version": "0.1.0"
}